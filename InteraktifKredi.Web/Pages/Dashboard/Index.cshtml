        var sortOrder = 'desc'; // 'asc' or 'desc'

        // Search functionality
        $searchInput.on('input', function() {
            var searchTerm = $(this).val().toLowerCase().trim();
            var $cards = $reportsGrid.find('.reports_library_card');

            $cards.each(function() {
                var $card = $(this);
                var reportNumber = $card.data('report-number') || '';
                var reportDate = $card.data('report-date') || '';
                var cardText = $card.text().toLowerCase();

                if (searchTerm === '' || 
                    reportNumber.toLowerCase().includes(searchTerm) || 
                    reportDate.includes(searchTerm) ||
                    cardText.includes(searchTerm)) {
                    $card.show();
                } else {
                    $card.hide();
                }
            });
        });

        // Filter/Sort functionality
        $filterBtn.on('click', function() {
            sortOrder = sortOrder === 'desc' ? 'asc' : 'desc';
            var $cards = $reportsGrid.find('.reports_library_card:visible').toArray();

            $cards.sort(function(a, b) {
                var dateA = $(a).data('report-date') || '';
                var dateB = $(b).data('report-date') || '';
                
                if (sortOrder === 'desc') {
                    return dateB.localeCompare(dateA);
                } else {
                    return dateA.localeCompare(dateB);
                }
            });

            $reportsGrid.empty();
            $reportsGrid.append($cards);
            
            // Update button text
            $(this).find('span').text(sortOrder === 'desc' ? 'Tarihe G√∂re Sƒ±rala (Yeni ‚Üí Eski)' : 'Tarihe G√∂re Sƒ±rala (Eski ‚Üí Yeni)');
