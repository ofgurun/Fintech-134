@* Footer Partial View - İnteraktif Kredi Web Şube *@
@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? "";
    var isPrivacyActive = currentPage.Equals("/Privacy", StringComparison.OrdinalIgnoreCase);
    var isTermsActive = currentPage.Equals("/Terms", StringComparison.OrdinalIgnoreCase);
    var isContactActive = currentPage.Equals("/Contact", StringComparison.OrdinalIgnoreCase);
}

<footer class="footer">
    <div class="footer__container">
        <div class="footer__content">
            <div class="footer__copyright">
                &copy; @DateTime.Now.Year <span class="footer__brand">İnteraktif Kredi</span>. Tüm hakları saklıdır.
            </div>
            <ul class="footer__links">
                <li class="footer__links_item">
                    <a href="/Privacy" class="footer__links_link @(isPrivacyActive ? "footer__links_link--active" : "")">Gizlilik Politikası</a>
                </li>
                <li class="footer__links_item">
                    <a href="/Terms" class="footer__links_link @(isTermsActive ? "footer__links_link--active" : "")">Kullanım Koşulları</a>
                </li>
                <li class="footer__links_item">
                    <a href="/Contact" class="footer__links_link @(isContactActive ? "footer__links_link--active" : "")">İletişim</a>
                </li>
            </ul>
        </div>
    </div>
</footer>
